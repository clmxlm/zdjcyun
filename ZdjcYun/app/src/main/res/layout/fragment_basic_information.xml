<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7fc"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/MY_DP_16"
                android:layout_marginRight="@dimen/MY_DP_16"
                android:layout_marginTop="@dimen/MY_DP_8"
                android:background="@drawable/ceshi"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:paddingTop="@dimen/MY_DP_16"
                    android:text="项目名称"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/MY_SP_12" />

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/MY_DP_16"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:textColor="#161617"
                    android:textSize="@dimen/MY_SP_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/MY_DP_16"
                android:layout_marginRight="@dimen/MY_DP_16"
                android:layout_marginTop="@dimen/MY_DP_8"
                android:background="@drawable/ceshi"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:paddingTop="@dimen/MY_DP_16"
                    android:text="项目概况"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/MY_SP_12" />

                <TextView
                    android:id="@+id/tv_project_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/MY_DP_16"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:textColor="#161617"
                    android:textSize="@dimen/MY_SP_14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/MY_DP_16"
                android:layout_marginRight="@dimen/MY_DP_16"
                android:layout_marginTop="@dimen/MY_DP_8"
                android:background="@drawable/ceshi"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:paddingTop="@dimen/MY_DP_16"
                    android:text="监测指标"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/MY_SP_12" />

                <TextView
                    android:id="@+id/tv_project_monitoring_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/MY_DP_16"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:textColor="#161617"
                    android:textSize="@dimen/MY_SP_14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/MY_DP_16"
                android:layout_marginRight="@dimen/MY_DP_16"
                android:layout_marginTop="@dimen/MY_DP_8"
                android:background="@drawable/ceshi"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:paddingTop="@dimen/MY_DP_16"
                    android:text="监测地址"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/MY_SP_12" />

                <TextView
                    android:id="@+id/tv_project_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/MY_DP_16"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:textColor="#161617"
                    android:textSize="@dimen/MY_SP_14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/MY_DP_16"
                android:layout_marginRight="@dimen/MY_DP_16"
                android:layout_marginTop="@dimen/MY_DP_8"
                android:background="@drawable/ceshi"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:paddingTop="@dimen/MY_DP_16"
                    android:text="项目时间点"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/MY_SP_12" />

                <TextView
                    android:id="@+id/tv_project_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/MY_DP_16"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:textColor="#161617"
                    android:textSize="@dimen/MY_SP_14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/MY_DP_16"
                android:layout_marginRight="@dimen/MY_DP_16"
                android:layout_marginTop="@dimen/MY_DP_8"
                android:background="@drawable/ceshi"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:paddingTop="@dimen/MY_DP_16"
                    android:text="项目类型"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/MY_SP_12" />

                <TextView
                    android:id="@+id/tv_project_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/MY_DP_16"
                    android:paddingLeft="@dimen/MY_DP_16"
                    android:textColor="#161617"
                    android:textSize="@dimen/MY_SP_14" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>

