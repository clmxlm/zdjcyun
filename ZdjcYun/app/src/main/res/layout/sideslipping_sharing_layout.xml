            android:layout_height="@dimen/MY_DP_120"
            android:background="@color/theme_color">

            <ImageView
                android:id="@+id/heard_image"
                android:layout_width="@dimen/MY_DP_80"
                android:layout_height="@dimen/MY_DP_80"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/MY_DP_10"
                android:src="@mipmap/logo_login"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/heard_image"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/MY_DP_150"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/true_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/MY_DP_5"
                        android:text="ZD智能监测"
                        android:textColor="@color/white"
                        android:textSize="@dimen/MY_SP_19"/>

                    <TextView
                        android:id="@+id/view_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/MY_DP_5"
                        android:text="云平台"
                        android:textColor="@color/white"
                        android:textSize="@dimen/MY_SP_13"/>


                </LinearLayout>


                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="@dimen/MY_DP_20"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_marginRight="@dimen/MY_DP_10"-->
                    <!--android:src="@drawable/more"/>-->


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
