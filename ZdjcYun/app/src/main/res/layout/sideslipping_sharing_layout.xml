                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/MY_DP_20"
                android:src="@drawable/more"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
