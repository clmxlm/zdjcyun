<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/MY_DP_10"
    android:layout_marginLeft="@dimen/MY_DP_10"
    android:layout_marginTop="@dimen/MY_DP_10"
    android:background="@drawable/ceshi"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/MY_DP_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:text="传感器名称"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sensor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/MY_SP_18"
                    android:textColor="#161617"
                    android:text="张三"/>


                <TextView
                    android:id="@+id/tv_terminal_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/MY_SP_13"
                    android:layout_toRightOf="@+id/tv_name"
                    android:layout_margin="@dimen/MY_DP_3"
                    android:textColor="#4a4a4a"
                    android:text="/技术员"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/MY_DP_1"
        android:layout_marginLeft="@dimen/MY_DP_10"
        android:layout_marginRight="@dimen/MY_DP_10"
        android:background="#e6e6e6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/MY_DP_10"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:text="编号"/>

            <TextView
                android:id="@+id/tv_sensor_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:layout_marginLeft="@dimen/MY_DP_8"
                android:text="18776"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/MY_DP_1"
            android:layout_height="@dimen/MY_DP_10"
            android:background="#e6e6e6"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/MY_DP_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:layout_marginLeft="@dimen/MY_DP_8"
                android:text="型号"/>

            <TextView
                android:id="@+id/tv_sensor_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:layout_marginLeft="@dimen/MY_DP_8"
                android:text="17673118374"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/MY_DP_10"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:text="量程"/>

            <TextView
                android:id="@+id/tv_range_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:layout_marginLeft="@dimen/MY_DP_8"
                android:text="18776"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/MY_DP_1"
            android:layout_height="@dimen/MY_DP_10"
            android:background="#e6e6e6"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/MY_DP_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:layout_marginLeft="@dimen/MY_DP_8"
                android:text="精度"/>

            <TextView
                android:id="@+id/tv_precision_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/MY_SP_12"
                android:layout_marginLeft="@dimen/MY_DP_8"
                android:text="17673118374"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</layout>

