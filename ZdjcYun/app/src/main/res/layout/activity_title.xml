<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/MY_DP_50"
            android:paddingLeft="@dimen/MY_DP_8"
            android:paddingRight="@dimen/MY_DP_18">

            <ImageView
                android:id="@+id/imgbtn_down"
                android:layout_width="@dimen/MY_DP_12"
                android:layout_height="@dimen/MY_DP_12"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/MY_DP_3"
                android:layout_toRightOf="@+id/tv_title"
                android:background="@mipmap/down"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/imgbtn_logo"
                android:text="@string/monitoring"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/MY_DP_5"
                android:textSize="@dimen/MY_SP_18" />

            <ImageView
                android:id="@+id/imgbtn_logo"
                android:layout_width="@dimen/MY_DP_30"
                android:layout_height="@dimen/MY_DP_30"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/MY_DP_5"
                android:layout_toRightOf="@+id/imgbtn_left"
                android:background="@mipmap/logo_login"/>

            <com.zdjc.zdjcyun.event.NumImageView
                android:id="@+id/imgbtn_left"
                android:layout_width="@dimen/MY_DP_30"
                android:layout_height="@dimen/MY_DP_30"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:background="@mipmap/left_open"/>


            <TextView
                android:id="@+id/tv_tt_project"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_change_account"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:onClick="allProject"
                android:visibility="gone"
                android:text="@string/all_project"
                android:textSize="@dimen/MY_SP_14"/>

            <ImageView
                android:id="@+id/tv_change_account"
                android:layout_width="@dimen/MY_DP_20"
                android:layout_height="@dimen/MY_DP_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_down"
                android:visibility="gone"
                android:gravity="center_vertical"/>
        </RelativeLayout>

    </LinearLayout>
</layout>

