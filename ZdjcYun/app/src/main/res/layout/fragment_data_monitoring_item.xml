<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/MY_DP_10"
    android:gravity="center"
    android:background="@drawable/ceshi"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/MY_DP_30"
            android:gravity="center">

            <View
                android:id="@+id/v"
                android:layout_width="@dimen/MY_DP_3"
                android:layout_height="@dimen/MY_DP_30"
                android:layout_alignParentLeft="true"
                android:background="@color/status_normal"/>

            <TextView
                android:id="@+id/tv_adapter_monitor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/v"
                android:gravity="center"
                android:layout_marginLeft="@dimen/MY_DP_20"
                android:text="指标一"/>

            <ImageView
                android:id="@+id/iv_zoom"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/MY_DP_25"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/MY_DP_10"
                android:src="@mipmap/icon_zoom"/>

        </RelativeLayout>

        <com.zdjc.zdjcyun.charting.charts.LineChart
            android:id="@+id/line_chart_adapter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/MY_DP_200"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/MY_DP_10"
            android:layout_marginRight="@dimen/MY_DP_10"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/MY_DP_1"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e9e3f6"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="实时值"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="累计值"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="单次值"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/MY_DP_1"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_current_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="0.124"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_total_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="0.124"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_single_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="0.124"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/MY_DP_1"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e9e3f6"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="速率值"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="最大值"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="最小值"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/MY_DP_1"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_speed_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1.256"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_max_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="1.256"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_min_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1.256"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/MY_DP_1"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e9e3f6"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="一级告警"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="二级告警"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="三级告警"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/MY_DP_1"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_first_level_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_two_level_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_three_level_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/MY_DP_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/MY_DP_1"
                android:layout_marginBottom="@dimen/MY_DP_10"
                android:background="@color/gray"/>



        </LinearLayout>

    </LinearLayout>




</LinearLayout>

