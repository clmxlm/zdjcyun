<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="@dimen/MY_DP_10"
    android:background="#8fffffff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/MY_SP_14"/>


    <TextView
        android:id="@+id/tt_total_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/indicator_color"
        android:gravity="center"
        android:textSize="@dimen/MY_SP_14"/>


    <TextView
        android:id="@+id/tt_single_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/timepicker_toolbar_bg"
        android:gravity="center"
        android:textSize="@dimen/MY_SP_14"/>


    <TextView
        android:id="@+id/tt_speed_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:textSize="@dimen/MY_SP_14"/>


</LinearLayout>
